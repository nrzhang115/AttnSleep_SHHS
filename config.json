{
    "name": "SHHS_with_downsampling",
    "n_gpu": 1,

    "arch": {
        "type": "AttnSleep",
        "args": {
        }
    },
    "data_loader": {
        "args":{
            "batch_size": 32,
            "num_folds": 1
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.00025,
            "weight_decay": 0.001,
            "amsgrad": true
        }
    },
    "loss": "weighted_CrossEntropyLoss",
    "metrics": [
        "accuracy"
    ],
    "trainer": {
        "epochs": 100,
        "save_dir": "saved/",
        "save_period": 30,
        "verbosity": 2,
        "monitor": "min val_loss"
    }
}
